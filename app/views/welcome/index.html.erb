
<meta name="viewport" content="width=device-width, initial-scale=1">

<style type="text/css">
  

/* ----------- mobile view ----------- */


@media only screen and (max-width: 568px) {

  #title {
    text-align: right;
  }

  .greetingbox {
    height: 400px;
  }

  #myMap {
    height: 400px;
  }

  .mapmenudivon {
    display: inherit;
    margin-top: 325px;
  }
  #mapmenu { 
    margin: 0; 
    padding: 0; 
    white-space:nowrap;
    list-style: none;
    display: flex;
  }

  .mapmenuitem { 
    margin: 0; 
    padding: 0;
    display: inline-block;
    border-style: thin solid #000;
    height: 75px;
    width: 25%;
    color: #FFF;
    text-align: center;
    line-height: 75px;
  }

  .addformon {
    height: 400px;
    width: 100%;
    margin: 0;
  }

  form {
    font-size: 20px;
  }

  input[type="text"] {
    color: #FFF;
    width: 100%;
    margin-left: 0%;
    border-style: none;
    margin-bottom: 10px;
    margin-top: 10px;
    background-color: #000;
    height: 40px;
  }

  input[type="submit"] {
    width: 30%;
    background-color: #FFF;
  }

  .mapicon {
    height: 150px;
    width: 175px;
  }

  .mapicon {
    height: 155px;
    width: 225px;
  }

}

@media only screen and (min-width: 568px) and (max-width: 850px) {
  #mapmenu {
    margin-left: 10%;
    margin-right: 10%;
  }
}  

@media only screen and (min-width: 568px) {
   
  #mobilenavbutton {
    display: none;
  }

  #mobilenavdiv {
    display: none;
  }

  .mapmenudivon {
    margin-top: 375px;
  }

}  

</style>

<body onload="GetMap();" oncontextmenu="return false">

  <p id="notice"><%= notice %></p>
  

    <div class="mymapoff" id='myMap'>
      <div class="addformoff">
        <form action="action_page.php">
            title: <br>
            <input type="text" name="Title" value="Insert Title Here">
            <br>
            difficulty: <br>    
            <input type="text" name="Difficulty" value="Intermediate">
            <br>
            description: <br>    
            <input type="text" name="Description" value="Open Road">
            <br>
            <input type="submit" value="next">
        </form> 
      </div>
      <div class="mapmenudivoff"> 
        <ul id="mapmenu">
          <li class="mapmenuitem" style="background-color: #002F2F; color:#FFF;" id="tripsbutton">trips</li>
          <li class="mapmenuitem" style="background-color: #046380;"> </li>
          <li class="mapmenuitem" style="background-color: #A7A37E;" id="findmebutton">locate</li>
          <li class="mapmenuitem" style="background-color: #AB1A25;" id="closebutton">close</li>
        </ul>
      </div>
    </div>

    <div id="titlediv"> <h2 id="title"> bomb hills </h2> </div>
    <div id="mobilenavbutton"> nav </div>
    <div id="mobilenavdiv">
      <ul>
        <li>about</li>
        <li>reviews</li>
        <li>contact</li>
        <li id="mobilenavclose">close</li>
      </ul>
    </div>
    <div class="greetingbox">
      <div class="imgcontainer">
        <p style="height: 120px;width: 140px;background-color: #046380;text-align: center;line-height: 120px;cursor: pointer;border-radius: 25%;color: #FFF;" id="pinimage"> map button </p>
         <!--<%= image_tag "mapicon.jpg", class: "mapicon", id: "pinimage" %>-->
      </div>
    </div>

    <div id="content">

    </div>
  
    <% for location in @locations %>
      <div class="data-locations" data-latitude=<%= location.latitude %> data-longitude=<%= location.longitude %> data-username=<%= location.username %> data-title=<%= location.title %> data-description=<%= location.description %> ></div>
    <% end %>

    <div class="footer">

    </div>
    
</body>
