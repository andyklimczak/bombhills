/* ----------- mobile view ----------- */


@media only screen and (max-device-width: 568px) {

  #title {
    text-align: center;
  }

  .greetingbox {
    height: 400px;
  }

  #myMap {
    height: 400px;
  }

  #mapmenu { 
    margin: 0; 
    padding: 0; 
    white-space:nowrap;
    list-style: none;
    display: flex;
  }

  .mapmenuitem { 
    margin: 0; 
    padding: 0;
    display: inline-block;
    border-style: thin solid #000;
    height: 75px;
    width: 25%;
    color: #FFF;
    text-align: center;
    line-height: 75px;
  }

  .addformon {
    height: 400px;
    width: 100%;
    margin: 0;
  }

  input {
    width: 75%;
    background-color: #013440;
    border-style: none;
    border-bottom-style: solid;
    margin-bottom: 25px;
  }

  input[type="text"] {
    color: #FFF;
  }

  input[type="submit"] {
    width: 30%;
    background-color: #FFF;
  }

  .mapicon {
    height: 150px;
    width: 175px;
}

}

</style>

<body onload="GetMap();">

  <p id="notice"><%= notice %></p>
  

    <div class="mymapoff" id='myMap'>
      <div class="addformoff">
        <form action="action_page.php">
            title: <br>
            <input type="text" name="title" value=" ">
            <br>
            difficulty: <br>    
            <input type="text" name="difficulty" value=" ">
            <br>
            description: <br>    
            <input type="text" name="description" value=" ">
            <br>
            <input type="submit" value="Check">
        </form> 
      </div>

    </div>

    <div id="titlediv"> <h2 id="title"> bomb hills </h2> </div>
    <div class="greetingbox">
      <div class="imgcontainer">
        <%= image_tag "mapicon.png", class: "mapicon", id: "pinimage" %>
      </div>
    </div>

    <div class="mapmenudivoff"> 
      <ul id="mapmenu">
        <li class="mapmenuitem" style="background-color: #002635;" id="tripsbutton">trips</li>
        <li class="mapmenuitem" style="background-color: #013440;">?</li>
        <li class="mapmenuitem" style="background-color: #D97925;" id="findmebutton">locate</li>
        <li class="mapmenuitem" style="background-color: #AB1A25;" id="closebutton">close</li>
      </ul>
    </div>

    <div class="navdiv">

    </div>
  
    <% for location in @locations %>
      <div class="data-locations" data-latitude=<%= location.latitude %> data-longitude=<%= location.longitude %> data-username=<%= location.username %> data-title=<%= location.title %> data-description=<%= location.description %> ></div>
    <% end %>

    <div class="footer">

    </div>
    
</body>
