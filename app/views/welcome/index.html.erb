<body oncontextmenu="return false">

  <p id="notice"><%= notice %></p>

  <div class="mymapoff" id='myMap'>
    <div class="mapmenudivoff"> 
      <ul id="mapmenu">
        <li class="mapmenuitem" style="background-color: #3E3837; color:#FFF;" id="tripsbutton"> 
          <span class="glyphicon glyphicon-globe" aria-hidden="true"></span>
        </li> 
        <li class="mapmenuitem" style="background-color: #7E7070;" id="addbutton" data-toggle="modal" data-target="#myModal">
          <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        </li>
        <li class="mapmenuitem" style="background-color: #046380;" id="findmebutton">
          <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
        </li> 
        <li class="mapmenuitem" style="background-color: #CBB32D;" id="starbutton">
          <span class="glyphicon glyphicon-star" aria-hidden="true"></span>
        </li>
        <li class="mapmenuitem" style="background-color: #F53433;" id="closebutton">
          <span class=" glyphicon glyphicon-remove" aria-hidden="true"></span>
        </li>
      </ul>
    </div>
  </div>

  <div id="mobilenavbutton"> 
   <span class="glyphicon glyphicon-th" aria-hidden="true"></span> 
  </div> 
  <div id="titledivtwo"> </div>
  <div id="mobilenavdiv">
    <ul>
      <li>login</li>
      <li>reviews</li>
      <li>contact</li>
      <li id="mobilenavclose">close</li>
    </ul>
  </div>

  <div style="background-color: #3129BE; color: #FFF;" class="jumbotron">
    <h1>bomb hills</h1>
    <p id="jumbotronparagraph"> Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. </p>
    <p><a class="btn btn-primary btn-lg" href="#" role="button" style="color: #FFF;" id="mapbutton">get started</a></p>
  </div>

  <!-- Modal -->
  <div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">New Location</h4>
        </div>
        
        <div class="modal-body">

          <%= form_for Location.new, html: {class:'form-horizontal'}, url: {controller: "locations", action: "create"} do |f| %>
            <div class="form-group">
                <%= f.label :title, class: "col-sm-2 control-label" %>
              <div class="col-sm-10">
                <%= f.text_field :title, class: "form-control" %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :difficulty, class: "col-sm-2 control-label"%>
              <div class="col-sm-10">
                <%= f.select :difficulty, options_for_select(['Beginner', 'Intermediate', 'Professional']), {}, { class: "form-control" } %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :description, class: "col-sm-2 control-label" %>
              <div class="col-sm-10">
                <%= f.text_area :description, class: "form-control" %>
              </div>
            </div>
            <%= hidden_field_tag('location[latitude]', 0, id: "new-latitude") %>
            <%= hidden_field_tag('location[longitude]', 0, id: "new-longitude") %>
            <%= hidden_field_tag('location[username]', "Test User", id: "username") %>
            <div class="form-group">
              <div class="col-sm-offset-2 col-sm-10">
                <%= f.submit "Submit", class: "btn btn-default" %>
              </div>
            </div>
          <% end %>

        </div>

      </div>
    </div>
  </div>
</body>
