<!-- mobile header -->
<div class="mobileheader">
  <h1> bomb<br><mark style="color:#066964;background: none;padding: 0px;">hills</mark> <br>  </h1>
  <ul>
    <% if user_signed_in? %>

      <li><%= link_to ' profile ', show_user_path(current_user.username), :class => 'none' %></li>
      <li><%= link_to ' edit profile ', edit_user_registration_path, :class => 'none' %></li>
      <li><%= link_to " logout ", destroy_user_session_path, method: :delete, :class => 'none'  %></li>

    <% else %>

      <li><%= link_to " register ", new_user_registration_path, :class => 'none'  %></li>
      <li><%= link_to " login ", new_user_session_path, :class => 'none'  %></li>

    <% end %>
  </ul>
</div>

<!-- header -->
<div class="header" id="header">
  <div class="navigation">
    <ul class="nav nav-pills" style="margin:0px;">
      <li role="presentation" class="dropdown">
        <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
          <% if user_signed_in? %>
            <%= current_user.username %>
          <% else %>
            User
          <% end %>
          <span class="caret"></span>
        </a>
        <ul class="dropdown-menu" style="margin: 10px 5px;">

          <% if user_signed_in? %>

            <li><%= link_to ' profile ', show_user_path(current_user.username), :class => 'none' %></li>
            <li>
              <%= link_to mailbox_inbox_path do %>
                inbox
                <% if unread_messages_count > 0 %>
                  <span class="label label-danger"><%=unread_messages_count%></span>
                <% end %>
              <% end %>
            </li>
            <li><%= link_to ' edit profile ', edit_user_registration_path, :class => 'none' %></li>
            <li><%= link_to " logout ", destroy_user_session_path, method: :delete, :class => 'none'  %></li>

          <% else %>

            <li><%= link_to " register ", new_user_registration_path, :class => 'none'  %></li>
            <li><%= link_to " login ", new_user_session_path, :class => 'none'  %></li>

          <% end %>

        </ul>
      </li>
      <li role="presentation"><a href="#" id="contact">Contact</a></li>
    </ul>
  </div>
  <div class="content">
    <h1>bom<mark style="color:#066964;padding: 0px;background: none;text-shadow:none;">bh</mark>ills </h1>
    <%= link_to ' Find ', spots_path %>
  </div>
  <div class="find">
    <form class="form-inline" id="form" action="<%= spots_path %>" method="get">
      <div class="form-group">
        <%= text_field_tag :search, params[:search], id: "search", class: "form-control", placeholder: "or search for a specific location" %>
      </div>
      <button type="submit" class="btn btn-default" id="searchbutton" >Search</button>
    </form>
  </div>
</div>


<!-- display -->
<div class="display">
  <div class="container">
    <div class="col-xs-12 col-sm-8 col-md-8">
      <h2> Explore More </h2>
      <p> Find new new places to ride and share them with your friends. Set times to meetup. Create and customize your own user profile and join our online community.  </p>
    </div>
    <div class="col-xs-12 col-sm-4 col-md-4" id="explorecol">

    </div>
  </div>
</div>

<!-- user content -->
<div class="row">
  <div class="col-md-12" id="carouselcol">
    <div id="usercontentcarousel" class="carousel slide" data-ride="carousel">

      <!-- Wrapper for slides -->
      <div class="carousel-inner">
        <% @posts.each do |post| %>
          <div class="item <% if post == @posts.first %>active<% end %>">
            <%= image_tag post.image.url %>
            <div class="carousel-caption">
              <%= link_to 'discover', posts_path %>
              <h3>photo by <%= post.user.username %></h3>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Controls -->
      <a class="left carousel-control" href="#usercontentcarousel" role="button" data-slide="prev" style="background: none;">
        <span class="glyphicon glyphicon-chevron-left"></span>
      </a>
      <a class="right carousel-control" href="#usercontentcarousel" role="button" data-slide="next" style="background: none;">
        <span class="glyphicon glyphicon-chevron-right"></span>
      </a>
    </div> <!-- Carousel -->
  </div>
</div>

<!-- footer -->
<div class="footer">
  <div class="container">
    <div class="col-sm-4 col-md-4">
    </div>
    <div class="col-sm-4 col-md-4" id="contactfooter">

    </div>
    <div class="col-sm-4 col-md-4">
      <ul id="mobilediscoverlink">
        <li><%= link_to 'discover more posts', posts_path %></li>
      </ul>
      <h1> We're also on </h1>
      <ul>
        <li><%= link_to "Twitter", "https://twitter.com/Bombhillstweets", :target => "_blank" %></li>
        <li><%= link_to "and Instagram", "https://www.instagram.com/bombhillspics/", :target => "_blank" %></li>
      </ul>
    </div>
  </div>
</div>

<div class="reference">
  <%# keep for reference %>
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
  <% if user_signed_in? %>
    Logged in as <strong><%= current_user.email %> | <%= current_user.username %></strong>.
    <%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link' %> |
    <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %>
  <% else %>
    <%= link_to "Sign up", new_user_registration_path, :class => 'navbar-link'  %> |
    <%= link_to "Login", new_user_session_path, :class => 'navbar-link'  %>
  <% end %>
</div>
