<!-- mobile header -->
<div class="mobileheader">
  <h1> bomb<br>hills <br>  </h1>
  <ul>
    <% if user_signed_in? %>

      <li><%= link_to 'profile', show_user_path(current_user.username), :class => 'none' %></li>
    <li><%= link_to 'settings', edit_user_registration_path, :class => 'none' %></li>
      <li><%= link_to "logout", destroy_user_session_path, method: :delete, :class => 'none'  %></li>

    <% else %>

      <li><%= link_to " register ", new_user_registration_path, :class => 'none'  %></li>
      <li><%= link_to " login ", new_user_session_path, :class => 'none'  %></li>

    <% end %>
  </ul>
</div>

<!-- header -->
<div class="headerwrapper">
  <div class="header" id="header">
    <div class="navigation">
      <ul class="nav nav-pills">
        <li role="presentation" class="dropdown">
          <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
            <% if user_signed_in? %>
              <%= current_user.username %>
            <% else %>
              User
            <% end %>
            <span class="caret"></span>
          </a>
          <ul class="dropdown-menu">

            <% if user_signed_in? %>

              <li><%= link_to ' profile ', show_user_path(current_user.username), :class => 'none' %></li>
              <li>
                <%= link_to mailbox_inbox_path do %>
                  inbox
                  <% if unread_messages_count > 0 %>
                    <span class="label label-danger"><%=unread_messages_count%></span>
                  <% end %>
                <% end %>
              </li>
              <li><%= link_to ' edit profile ', edit_user_registration_path, :class => 'none' %></li>
              <li><%= link_to " logout ", destroy_user_session_path, method: :delete, :class => 'none'  %></li>

            <% else %>

              <li><%= link_to " register ", new_user_registration_path, :class => 'none'  %></li>
              <li><%= link_to " login ", new_user_session_path, :class => 'none'  %></li>

            <% end %>

          </ul>
        </li>
        <li role="presentation"><a href="#" id="contact">Contact</a></li>
      </ul>
    </div>
    <div class="content">
      <h1>BOM<mark id="titlemark">BH</mark>ILLS </h1>
      <%= link_to ' Launch ', spots_path %>
    </div>
    <div class="find">
      <form class="form-inline" id="form" action="<%= spots_path %>" method="get">
        <div class="form-group">
          <%= text_field_tag :search, params[:search], id: "search", class: "form-control", placeholder: "or search for a specific location" %>
        </div>
        <button type="submit" class="btn btn-default" id="searchbutton" >Search</button>
      </form>
    </div>
  </div>
</div>


<!-- display -->
<div class="display">
  <div class="container">
    <div class="col-xs-12 col-sm-8 col-md-8">
      <h2> Explore More </h2>
      <p> Find new new places to ride and share them with your friends. Set times to meetup. Create and customize your own user profile and join our online community.  </p>
    </div>
    <div class="col-xs-12 col-sm-4 col-md-4" id="explorecol">
      <%= image_tag("iphone.png")%>
    </div>
  </div>
</div>

<!-- user content -->
<div class="usercontent">
  <h1>DISCOVER</h1>
  <p>See what the community has been up to.</p>
  <div class="container" id="usercontentglyphicons">
    <div class="col-sm-4">
      <span aria-hidden="true" class=" glyphicon glyphicon-map-marker"></span>
    </div>
    <div class="col-sm-4">
      <span aria-hidden="true" class=" glyphicon glyphicon-picture"></span>
    </div>
    <div class="col-sm-4">
      <span aria-hidden="true" class=" glyphicon glyphicon-user"></span>
    </div>
  </div>
  <p id="usercontentbutton"><%= link_to 'find', posts_path %></p>
</div>

<!-- footer -->
<div class="footer">
  <div class="container">
    <div class="col-sm-4 col-md-4">
    </div>
    <div class="col-sm-4 col-md-4">

    </div>
    <div class="col-sm-4 col-md-4">
      <h1> We're also on </h1>
      <ul>
        <li><%= link_to "Twitter", "https://twitter.com/Bombhillstweets", :target => "_blank" %></li>
        <li><%= link_to "and Instagram", "https://www.instagram.com/bombhillspics/", :target => "_blank" %></li>
      </ul>
    </div>
  </div>
</div>

<div class="reference">
  <%# keep for reference %>
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
  <% if user_signed_in? %>
    Logged in as <strong><%= current_user.email %> | <%= current_user.username %></strong>.
    <%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link' %> |
    <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %>
  <% else %>
    <%= link_to "Sign up", new_user_registration_path, :class => 'navbar-link'  %> |
    <%= link_to "Login", new_user_session_path, :class => 'navbar-link'  %>
  <% end %>
</div>
