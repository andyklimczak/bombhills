<%= render 'layouts/navbar' %>

<div class="signup">
  <div class="row">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
    <div class="col-sm-6 col-md-6" id="register-col-one">

        <div class="field">
          <%= f.label :username %><br>
          <%= f.text_field :username, autofocus: true, placeholder: "billy joel" %>
        </div>

        <div class="field">
          <%= f.label :email %><br>
          <%= f.email_field :email, placeholder: "uptowngirll@domain.com" %>
        </div>
      
      </div>
    
      <div class="col-sm-6 col-md-6" id="register-col-two">

        <div class="field">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters min)</em>
          <% end %><br>
          <%= f.password_field :password, autocomplete: "off" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %><br>
          <%= f.password_field :password_confirmation, autocomplete: "off" %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", data: { disable_with: 'Registering...' } %>
        </div>
      </div>
    <% end %>
  </div>


</div>
