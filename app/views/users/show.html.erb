<!-- header --> 
<div class="profileheader">
    <%= link_to ' home ', root_path %>
    <h2> Welcome </h2>
    <%= image_tag 'me.jpg',:class => 'profileimg'  %>
    <h1> Alec Sheridan </h1>
    <p> never stay complacent. </p>
</div>
<div class="supporting">
    <ul>
        <li><span class="glyphicon glyphicon-send" aria-hidden="true" style="font-size: 3em;" id="one"></span></li>
        <li><span class="glyphicon glyphicon-user" aria-hidden="true" style="font-size: 3em;" id="two"></span></li>
        <li><span class="glyphicon glyphicon-map-marker" aria-hidden="true" style="font-size: 3em;" data-toggle="modal" data-target="#myModal" id="three"></span></li>
    </ul>
</div>
<div class="images">
    <div class="container">
        <div class="row">
            <div class="col-sm-4 col-md-4">
                <div class="imgwrapper">
                    <%= image_tag 'one.jpg',:class => 'img-responsive'  %>
                </div>
            </div>
            <div class="col-sm-4 col-md-4">
                <%= image_tag 'two.jpg',:class => 'img-responsive'  %>
            </div>
            <div class="col-sm-4 col-md-4">
                <%= image_tag 'three.jpg',:class => 'img-responsive'  %>
            </div>
        </div>
            
        <div class="row">
            <div class="col-sm-4 col-md-4">
                <%= image_tag 'four.jpg',:class => 'img-responsive'  %>
            </div>
            <div class="col-sm-4 col-md-4">
                <%= image_tag 'five.jpg',:class => 'img-responsive'  %>
            </div>
            <div class="col-sm-4 col-md-4">
                <%= image_tag 'six.jpg',:class => 'img-responsive'  %>
            </div>
        </div>
            
        <div class="row">
            <div class="col-sm-4 col-md-4">
                <%= image_tag 'seven.jpg',:class => 'img-responsive'  %>
            </div>
            <div class="col-sm-4 col-md-4">
                <%= image_tag 'person.jpg',:class => 'img-responsive'  %>
            </div>
            <div class="col-sm-4 col-md-4">
            </div> 
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Alec's Spots</h4>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>


