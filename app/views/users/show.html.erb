<%= render 'layouts/navbar' %>

<div class="container">
  <div class="row profile">
    <div class="col-md-3">
      <div class="profile-sidebar">
        <!-- SIDEBAR USERPIC -->
        <div class="profile-userpic">
          <%= image_tag @user.avatar.url(:large),:class => 'img-responsive'  %>
        </div>
        <!-- END SIDEBAR USERPIC -->
        <!-- SIDEBAR USER TITLE -->
        <div class="profile-usertitle">
          <div class="profile-usertitle-name">
            <%= @user.username %>
          </div>
          <div class="profile-usertitle-motto">
            <%= @user.motto %>
          </div>
        </div>
        <!-- END SIDEBAR USER TITLE -->
        <!-- SIDEBAR BUTTONS -->
        <div class="profile-userbuttons">
          <button type="button" class="btn btn-success btn-sm" data-toggle="modal" data-target="#spotModal" style="background: #066964;border: none;">Spots</button>
          <button type="button" class="btn btn-danger btn-sm" style="background: #233E47;border: none;">Message</button>
        </div>
        <!-- END SIDEBAR BUTTONS -->
        <!-- SIDEBAR MENU -->
        <div class="profile-usermenu">
          <ul class="nav">
            <li class="active">
              <a href="#">
                <i class="glyphicon glyphicon-home"></i>
                Overview </a>
            </li>
            <% if current_user == @user %>
              <li id="useruploadbutton" data-toggle="modal" data-target="#imageModal">
                <a href="#">
                  <i class="glyphicon glyphicon-camera"></i>
                  Add Image Post </a>
              </li>
              <li data-toggle="modal" data-target="#videoModal">
                <a href="#">
                  <i class="glyphicon glyphicon-facetime-video"></i>
                  Add Video Post </a>
              </li>
            <% end %>
          </ul>
        </div>
        <!-- END MENU -->
      </div>
    </div>
    <div class="col-md-9">
      <div class="profile-content">
          <div class="row">
            <% @user.posts.each do |post| %>
              <div class="col-sm-6 col-md-6" style="padding: 0px;margin-top: 10px;">
                <%= image_tag post.image.url(:medium),:class => 'img-responsive' %>
              </div>
            <% end %>
          </div>
      </div>
    </div>
  </div>
</div>
<br>
<br>

<%= render 'users/spots_modal' %>
<%= render 'users/add_image_modal' %>
