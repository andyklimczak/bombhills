<!-- header --> 

<div class="profileheadercontainer">
    <%= render 'layouts/navbar' %>
    <div class="row" id="profileheader">
        <div class="col-sm-6 col-md-6" id="profileimgdiv">
            <%= image_tag @user.avatar.url(:large),:class => 'profileimage'  %>
        </div>
        <div class="col-sm-6 col-md-6" id="profileinfodiv">
            <div id="profileinfobox">
                <h2> <%= @user.username %> </h2>
                <p> motto: <%= @user.motto %> </p>
                <p> ride style: </p>
                <p> board:  </p>
                <p style="margin-bottom: 20px"> about me: </p>
                <a id="userspotsbutton" data-toggle="modal" data-target="#spotModal"> my spots </a>
                <% if current_user == @user %>
                    <a id="useruploadbutton" data-toggle="modal" data-target="#imageModal"> upload photo </a>
                <% end %>
            </div>
        </div>
    </div>
</div>

<div class="images container">
    <div class="row">
        <% @user.posts.each do |post| %>
            <div class="col-sm-4 col-md-4">
                <%= image_tag post.image.url(:medium),:class => 'img-responsive' %>
            </div>
        <% end %>
    </div>
</div>    

<%= render 'users/spots_modal' %>
<%= render 'users/add_image_modal' %>
