<%= render 'layouts/navbar' %>
<div class="container post-container">
  <div class="image">
    <%= image_tag @post.image %>
  </div>

  <h1>
    <%= @post.title %>
  </h1>


  <p>
    <%= @post.description %>
  </p>
  </br>

  <p>
    <mark>Uploaded By:</mark>
    <%= link_to @post.user.username, show_user_path(@post.user.username) %>
  </p>

  <% unless @post.spot.nil? %>
    <p>
      <mark>Location:</mark>
      <%= link_to @post.spot.title, spot_path(@post.spot) %>
    </p>
  <% end %>

  <p>
    <mark>Uploaded:</mark>
    <%= @post.created_at.strftime("%B %d, %Y") %>
  </p>
  </br>

  <% if @post.user == current_user %>
    <%= link_to 'Edit', edit_post_path(@post) %>
  <% end %>
  <%= link_to 'Back', posts_path %>
</div>
