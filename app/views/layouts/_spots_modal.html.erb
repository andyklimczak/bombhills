<!-- Spots Modal -->
<div class="modal fade" id="spot-modal" tabindex="-1" role="dialog" aria-labelledby="my-modal-label">
  <div class="modal-dialog" role="document" id="user-spots-modal-dialog">
    <div class="modal-content">
      <div class="modal-body" id="spots-modal-body">
        <div id="left">
          <ul>
            <li id="spots-btn"><span aria-hidden="true" class="glyphicon glyphicon-map-marker"></span></li>
            <% if user == current_user %>
              <li id="spots-edit-btn"><span aria-hidden="true" class="glyphicon glyphicon-edit"></span></li>
            <% end %>
          </ul>
        </div>
        <div id="right">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <div class="user-spots">
            <% if user.spots.any? %>
              <%= react_component 'SpotModalView', { spots: user.spots } %>
            <% else %>
            <p>No spots to view</p>
            <% end %>
          </div>
          <div class="user-spots-edit">
            <% if current_user == user and user.spots.any? %>
              <form id="users-spots-edit-form">
                <div class="form-group">
                  <%= select_tag "spot_id", options_for_select(user.spots.map{ |s| [s.title, s.id ]}), { class: 'form-control'} %>
                </div>
                <div class="form-group">
                  <%= select_tag "difficulty", options_for_select(difficulties, user.spots.first.difficulty), { class: 'form-control'} %>
                </div>
                <div class="form-group">
                  <input name="title" type="text" class="form-control" id="usr" value="<%= user.spots.first.title %>">
                </div>
                <div class="form-group">
                  <textarea name="description" class="form-control" rows="2" id="comment" placeholder="description"><%= user.spots.first.description %></textarea>
                </div>
                <div class="text-center">
                  <button type="button" class="btn btn-default" id="modal-update-btn">Update</button>
                  <button type="button" class="btn btn-default" id="modal-delete-btn">Delete</button>
                </div>
              </form>
            <% else %>
              No spots to edit
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
