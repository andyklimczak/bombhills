<!-- Spots Modal -->
<div class="modal fade" id="spot-modal" tabindex="-1" role="dialog" aria-labelledby="my-modal-label">
  <div class="modal-dialog" role="document" id="user-spots-modal-dialog">
    <div class="modal-content">
      <button type="button" class="close" data-dismiss="modal">&times;</button>
      <div class="modal-header">
        <h4>
          <%= user.username %>'s Spots
        </h4>
      </div>
      <div class="modal-body" id="spots-modal-body">
        <% if user.spots.any? %>
          <%= react_component 'Spots', { spots: user.spots, currentUser: current_user.id } %>
        <% else %>
          No spots
        <% end %>
      </div>
    </div>
  </div>
</div>
