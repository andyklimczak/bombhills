<div id="new-location-error" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <div class="modal-content" style="background: #CF3530;padding-bottom: 10px;">
      <div class="modal-header" style="background: #CF3530;border: none;color: #FFF;">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Error</h4>
      </div>
      
      <div class="modal-body" style="color: #FFF;background: #CF3530;">
        <p style="margin-bottom: 30px;">You must be logged in to create location.</p>
      </div>
      <div class="modal-footer" style="color: #FFF;background: #CF3530;border:none;">
        <%= link_to 'login', new_user_session_path, :id => 'maperrorloginbutton' %>
      </div>
    </div>
  </div>
</div>
