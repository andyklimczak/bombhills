<div id="new-location-form" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">New Location</h4>
      </div>
      
      <div class="modal-body">

        <%= form_for Spot.new, html: {class:'form-horizontal'}, url: {controller: "spots", action: "create"} do |f| %>
          <div class="form-group">
              <%= f.label :title, class: "col-sm-2 control-label" %>
            <div class="col-sm-10">
              <%= f.text_field :title, class: "form-control" %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :difficulty, class: "col-sm-2 control-label"%>
            <div class="col-sm-10">
              <%= f.select :difficulty, options_for_select(['Beginner', 'Intermediate', 'Professional']), {}, { class: "form-control" } %>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="traffic">Traffic</label>
            <div class="col-sm-10">
              <input class="form-control">
            </div>
          </div>
          <div class="form-group">
            <%= f.label :description, class: "col-sm-2 control-label" %>
            <div class="col-sm-10">
              <%= f.text_area :description, class: "form-control" %>
            </div>
          </div>
          <%= hidden_field_tag('spot[latitude]', 0, id: "new-latitude") %>
          <%= hidden_field_tag('spot[longitude]', 0, id: "new-longitude") %>
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <%= f.submit "Submit", class: "btn btn-default" %>
            </div>
          </div>
        <% end %>

      </div>

    </div>
  </div>
</div>
